{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "ES2019",
    "outDir": "build",
    "rootDir": "src",
    "typeRoots": [
      "../../ts-declarations",
      "src/ts-declarations",
      "./node_modules/@types"
    ],
    "paths": {
      "common-types/*": ["../../common-types/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [{ "path": "../../common-types/tsconfig.json" }]
}
